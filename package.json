{
  "name": "claude-dev-hub",
  "version": "1.0.0",
  "description": "Web-based development environment with Claude AI integration",
  "private": true,
  "workspaces": [
    "backend",
    "frontend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "npm run dev --workspace=backend",
    "dev:frontend": "npm run dev --workspace=frontend",
    "build": "npm run build --workspace=frontend",
    "start": "npm run start --workspace=backend",
    "setup:server": "bash scripts/setup-server.sh"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
